{
  "name": "passwordless-otp-auth",
  "version": "1.0.0",
  "description": "Minimal Express service for passwordless email OTP authentication.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "echo 'Build complete - ready for Vercel deployment'",
    "vercel-dev": "vercel dev",
    "deploy": "vercel --prod",
    "setup-stripe": "node setup-stripe.js",
    "test-payment": "node test-payment.js",
    "test-smtp": "node test-smtp.js",
    "test-integration": "node test-client-integration.js",
    "test-email": "node test-smtp.js && echo 'SMTP test completed - check siparrott@yahoo.co.uk'"
  },
  "keywords": [
    "otp",
    "passwordless",
    "authentication",
    "express"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.x"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.0.2",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.8",
    "redis": "^4.6.7",
    "stripe": "^14.12.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11"
  }
